{#
    Stacked round icons

    @example
        {% import "components/social-view.njk" as social %}
        {{ social.stackedRoundIcons() }}
#}
{% macro stackedRoundIcons() %}
    <div class="social">
        <a href="https://t.me/clicnews" target="_blank">
            <span class="fa-stack">
                <i class="fas fa-circle fa-stack-2x"></i>
                <i class="fab fa-telegram-plane fa-stack-1x fa-inverse fa-fw"></i>
            </span>
        </a>
        <a href="https://www.instagram.com/clicepfl/" target="_blank">
            <span class="fa-stack">
                <i class="fas fa-circle fa-stack-2x"></i>
                <i class="fab fa-instagram fa-stack-1x fa-inverse fa-fw"></i>
            </span>
        </a>
        <a href="https://twitter.com/CLICepfl" target="_blank">
            <span class="fa-stack">
                <i class="fas fa-circle fa-stack-2x"></i>
                <i class="fab fa-twitter fa-stack-1x fa-inverse fa-fw"></i>
            </span>
        </a>
        <a href="mailto:clic@epfl.ch" target="_blank">
            <span class="fa-stack">
                <i class="fas fa-circle fa-stack-2x"></i>
                <i class="fas fa-envelope fa-stack-1x fa-inverse fa-fw"></i>
            </spawn>
        </a>
    </div>
{% endmacro %}

