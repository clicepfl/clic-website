{#
    Last news cards
    This macro displays a list of the latest news inside a card each

    @param lastNews The last news to display (selection should be done
    beforehand) as an array of News
                    (type News[] as defined in {@link news.ts})

    @example Inserts the cards of the latest news, data in the view model
             is News[]
        {% import "components/news/news-view.njk" as news %}
        {{ news.newsCards(news = data) }}
#}
{% macro newsCards(news) %}
    {% for batch in news | batch(3) %}
        <div class="news-row">
            {% for item in batch %}
                <div class="news-item">
                    <a href="/news/{{item.id}}">
                        <img src="{{item.image}}" alt="{{item.title}}">
                        <p class="title">{{item.title}}</p>
                        <p class="date">{{item.date}}
                            par
                            {{item.author}}</p>
                    </a>
                    <p class="desc">{{item.shortText}}</p>
                    <a href="/news/{{item.id}}" class="more">Lire plus &raquo;</a>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endmacro %}