{% macro eventsGrid(events) %}
    {% for batch in events | batch(2) %}
        <div class="news-row">
            {% for item in batch %}
                <div class="news-item">
                    <img src="{{item.image}}" alt="{{item.title}}">
                    <p class="title">{{item.title}}</p>
                    <p class="date">
                        {{item.date}} par {{item.organizer}}
                    </p>
                    <p class="desc">{{item.shortText}}</p>
                    {% if item.newsId %}
                        <a href="/news/{{item.newsId}}" class="more">Lire plus &raquo;</a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endmacro %}
